---
title: INFOMETALS
layout: base.ejs
---

  <!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
      <h1 class="display-3"><%=landing.welcome%></h1>
      <p class="lead"><%=landing.message%></p>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
      <% articles.forEach(article => { %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src="<%=article.img%>" alt="<%=article.imgName%>">
            <div class="card-body">
              <h4 class="card-title"><%=article.title%></h4>
              <p class="card-text"><%=article.summary%></p>
            </div>
            <div class="card-footer">
              <a href="/show/<%=article.slug%>" class="btn btn-primary" target="_blank">Find Out More!</a>
            </div>
          </div>
        </div>
      <% }) %>
      

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

 